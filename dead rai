-- Bao Hub - Dead Rails (Rayfield GUI - Si√™u ƒë·∫πp, m∆∞·ª£t, gi·ªëng Rayfield ch√≠nh h√£ng)
-- N√∫t 1: Glass Push (Toggle) - T·ª± ƒë·ªông ƒë·∫©y qu√°i (zombies) ƒëi xa, slider ch·ªânh ƒë·ªô d√†i (studs)
-- N√∫t 2: Get Kill Tool - Equip tool, l·∫°i g·∫ßn qu√°i > Click chu·ªôt = Qu√°i CH·∫æT NGAY!
-- H·ªó tr·ª£ PC/Mobile (Delta/Fluxus), Update m·ªõi nh·∫•t 2025 | No Key | Anti-Detect

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Bao Hub v1.0 - Dead Rails",
   LoadingTitle = "Bao Hub Loading...",
   LoadingSubtitle = "D√†nh ri√™ng cho b·∫°n ‚ù§Ô∏è",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "BaoHubDeadRails",
      FileName = "BaoConfig"
   },
   KeySystem = false -- No key
})

local Tab = Window:CreateTab("üßü Zombie Controls", 4483362458) -- Icon zombie

local Section = Tab:CreateSection("Ch·ª©c nƒÉng ch√≠nh")

-- Bi·∫øn global
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local PushEnabled = false
local MaxDist = 50
local KillTool = nil

-- Toggle Glass Push
Tab:CreateToggle({
   Name = "Glass Push (Auto ƒê·∫©y Qu√°i)",
   CurrentValue = false,
   Flag = "GlassPush",
   Callback = function(Value)
      PushEnabled = Value
   end,
})

-- Slider ƒê·ªô d√†i ƒë·∫©y
Tab:CreateSlider({
   Name = "ƒê·ªô d√†i ƒë·∫©y (Studs)",
   Range = {5, 100},
   Increment = 5,
   CurrentValue = 50,
   Flag = "PushDist",
   Callback = function(Value)
      MaxDist = Value
   end,
})

-- Button Kill Tool
Tab:CreateButton({
   Name = KillTool and "Unequip Kill Tool" or "Get Kill Tool",
   Callback = function()
      if KillTool and KillTool.Parent then
         KillTool:Destroy()
         KillTool = nil
         Rayfield:Notify({
            Title = "Bao Hub",
            Content = "ƒê√£ unequip Kill Tool!",
            Duration = 3,
            Image = 4483362458,
         })
         return
      end

      KillTool = Instance.new("Tool")
      KillTool.Name = "Bao Kill Tool"
      KillTool.RequiresHandle = false
      KillTool.Parent = LocalPlayer.Backpack

      KillTool.Activated:Connect(function()
         local Mouse = LocalPlayer:GetMouse()
         local target = Mouse.Target
         if target then
            local model = target:FindFirstAncestorWhichIsA("Model")
            if model and model:FindFirstChild("Humanoid") and model:FindFirstChild("HumanoidRootPart") and model ~= LocalPlayer.Character then
               local char = LocalPlayer.Character
               if char and char:FindFirstChild("HumanoidRootPart") then
                  local dist = (char.HumanoidRootPart.Position - model.HumanoidRootPart.Position).Magnitude
                  if dist < 40 then -- G·∫ßn qu√°i <40 studs
                     model.Humanoid.Health = 0
                     Rayfield:Notify({
                        Title = "Kill Success!",
                        Content = "Qu√°i ƒë√£ ch·∫øt! üíÄ",
                        Duration = 2,
                     })
                  end
               end
            end
         end
      end)

      Rayfield:Notify({
         Title = "Bao Hub",
         Content = "ƒê√£ equip Kill Tool! L·∫°i g·∫ßn qu√°i > Click ƒë·ªÉ kill.",
         Duration = 4,
         Image = 4483362458,
      })
   end,
})

-- Auto Push Logic (Heartbeat)
RunService.Heartbeat:Connect(function()
   if PushEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
      local root = LocalPlayer.Character.HumanoidRootPart
      for _, obj in pairs(workspace:GetDescendants()) do
         if obj:IsA("Model") and obj ~= LocalPlayer.Character and obj:FindFirstChild("Humanoid") and obj.Humanoid.Health > 0 and obj:FindFirstChild("HumanoidRootPart") then
            local dist = (root.Position - obj.HumanoidRootPart.Position).Magnitude
            if dist < MaxDist and dist > 0 then
               local dir = (root.Position - obj.HumanoidRootPart.Position).Unit
               local bv = Instance.new("BodyVelocity")
               bv.MaxForce = Vector3.new(1e5, 1e5, 1e5)
               bv.Velocity = dir * 100 + Vector3.new(0, 30, 0) -- ƒê·∫©y m·∫°nh + vƒÉng l√™n
               bv.Parent = obj.HumanoidRootPart
               task.wait(0.1)
               if bv.Parent then bv:Destroy() end
            end
         end
      end
   end
end)

-- Extra: NoClip (Bonus)
Tab:CreateToggle({
   Name = "NoClip (Bay t∆∞·ªùng)",
   CurrentValue = false,
   Flag = "NoClip",
   Callback = function(Value)
      local char = LocalPlayer.Character
      if char then
         for _, part in pairs(char:GetDescendants()) do
            if part:IsA("BasePart") then
               part.CanCollide = not Value
            end
         end
      end
   end,
})

Tab:CreateLabel("üëë Bao Hub Exclusive - Dead Rails 2025")

Rayfield:Notify({
   Title = "Bao Hub Loaded!",
   Content = "Ch√∫c farm vui! Toggle Glass > Ch·ªânh slider > Enjoy üßü‚Äç‚ôÇÔ∏èüöÇ",
   Duration = 5,
   Image = 4483362458,
})